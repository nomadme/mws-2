<main id="maincontent">

  <header>
    <nav>
      <h1><a href="/">Restaurant Reviews</a></h1>
    </nav>
  </header>

  <section id="map-container">
    <div id="map"></div>
  </section>
  <section>
    <div class="filter-options">
      <h2 id="filter-results">Filter Results</h2>
      <select id="neighborhoods-select" name="neighborhoods" onchange="updateRestaurants()"
              aria-labelledby="filter-results">
        <option value="all">All Neighborhoods</option>
      </select>
      <select id="cuisines-select" name="cuisines" onchange="updateRestaurants()" aria-labelledby="filter-results">
        <option value="all">All Cuisines</option>
      </select>
    </div>

    <ul id="restaurants-list"></ul>
  </section>

</main>

<script>
  if ("serviceWorker" in navigator){
    navigator.serviceWorker
      .register("sw.js")
      .then(reg =>{
        console.log("Service worker registration done: " + reg.scope);
      })
      .catch(error => {
        console.log("Registration failed: " + error);
      });

    navigator.serviceWorker.ready.then(reg => {
      console.log('Service worker ready')
    })
  }
</script>
<script src="js/idb.js"></script>
<script src="js/dbhelper.js"></script>
<script src="js/main.js"></script>
